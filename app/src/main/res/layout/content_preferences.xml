<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="60dp"
    android:paddingBottom="@dimen/activity_bottom_margin"
    tools:showIn="@layout/activity_preferences"
    tools:context="justbe.mindfulnessapp.PreferencesActivity">

    <TableLayout
        android:id="@+id/preferencesTable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">

        <TableRow>
            <TextView
                android:id="@+id/usernameText"
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:text="@string/username_text"
                android:textColor="@color/black"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/editUsername"
                android:padding="10dip"
                android:layout_marginRight="5dp"
                android:background="@color/bpTransparent"
                android:gravity="right"
                android:text="Kohler"
                android:textColor="@color/bpTransparent_black"
                android:textSize="10pt" />
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp" >
            <View style="@style/Divider" />
        </LinearLayout>

        <TableRow>
            <TextView
                android:id="@+id/wakeUpText"
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:text="@string/wake_up_text"
                android:textColor="@color/black"
                android:textSize="10pt" />

            <Button
                android:id="@+id/wakeUpButton"
                android:padding="10dp"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:text="8 AM"
                android:textColor="@color/bpTransparent_black"
                android:textSize="10pt"
                android:onClick="showTimePickerDialog"
                style="?android:attr/borderlessButtonStyle"/>
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp" >
            <View style="@style/Divider" />
        </LinearLayout>

        <TableRow>
            <TextView
                android:id="@+id/goToSleepText"
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:text="@string/go_to_sleep_text"
                android:textColor="@color/black"
                android:textSize="10pt" />

            <Button
                android:id="@+id/goToSleepButton"
                android:padding="10dp"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:text="9 PM"
                android:textColor="@color/bpTransparent_black"
                android:textSize="10pt"
                android:onClick="showTimePickerDialog"
                style="?android:attr/borderlessButtonStyle" />
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp" >
            <View style="@style/Divider" />
        </LinearLayout>

        <TableRow>
            <Button
                android:id="@+id/changeButtonPassword"
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="left"
                android:text="@string/change_password_text"
                android:textSize="10pt"
                android:textColor="@color/orange"
                android:onClick="changePassword"
                style="?android:attr/borderlessButtonStyle"/>
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp" >
            <View style="@style/Divider" />
        </LinearLayout>

        <TableRow>
            <Button
                android:id="@+id/logOutButton"
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="left"
                android:text="@string/log_out_text"
                android:textSize="10pt"
                android:textColor="@color/orange"
                android:onClick="logout"
                style="?android:attr/borderlessButtonStyle"/>
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp" >
            <View style="@style/Divider" />
        </LinearLayout>
    </TableLayout>

</RelativeLayout>
