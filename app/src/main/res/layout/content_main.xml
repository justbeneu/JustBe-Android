<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_top_margin"
    android:paddingBottom="@dimen/activity_bottom_margin"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context="justbe.mindfulnessapp.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assessment Tmp Button"
        android:id="@+id/assessmentButton"
        android:onClick="assessmentButtonPressed" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/weeklyLessonButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:onClick="lessonButtonPressed"
        style="@android:style/Widget.Button"
        android:backgroundTint="#99E0EDCF">
        <ImageView
            android:id="@+id/weeklyLessonButtonImage"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/check_green_2x"/>
        <TextView
            android:id="@+id/weeklyLessonButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bpWhite"
            android:textSize="20dp"
            android:text="Week # Exercise"
            android:layout_toRightOf="@+id/weeklyLessonButtonImage"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
    </RelativeLayout>

</RelativeLayout>
