<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainView"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_top_margin"
    android:paddingBottom="@dimen/activity_bottom_margin"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="justbe.mindfulnessapp.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assessment Tmp Button"
        android:id="@+id/assessmentButton"
        android:onClick="assessmentButtonPressed" />
        <LinearLayout
            android:id="@+id/weekdaysLayout"
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_below="@+id/assessmentButton"
            android:gravity="center_vertical">
            <LinearLayout
                android:id="@+id/suMeditation"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:onClick="changeWeekdayButtonPressed">
                <TextView
                    android:id="@+id/suMeditationText"
                    android:layout_weight=".8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:textColor="@color/transparentLightGreen"
                    android:textSize="@dimen/normal_text_size"
                    android:text="@string/s_text"/>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:background="@color/transparentLightGreen">
                    <ImageView
                        android:id="@+id/suMeditationImage"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/check_gray_2x"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/mMeditation"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:onClick="changeWeekdayButtonPressed">
                <TextView
                    android:id="@+id/mMeditationText"
                    android:layout_weight=".8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:textColor="@color/transparentLightGreen"
                    android:textSize="@dimen/normal_text_size"
                    android:text="@string/m_text"/>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:background="@color/transparentLightGreen">
                    <ImageView
                        android:id="@+id/mMeditationImage"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/check_gray_2x"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tMeditation"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:onClick="changeWeekdayButtonPressed">
                <TextView
                    android:id="@+id/tMeditationText"
                    android:layout_weight=".8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:textColor="@color/transparentLightGreen"
                    android:textSize="@dimen/normal_text_size"
                    android:text="@string/t_text"/>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:background="@color/transparentLightGreen">
                    <ImageView
                        android:id="@+id/tMeditationImage"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/check_gray_2x"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/wMeditation"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:onClick="changeWeekdayButtonPressed">
                <TextView
                    android:id="@+id/wMeditationText"
                    android:layout_weight=".8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:textColor="@color/transparentLightGreen"
                    android:textSize="@dimen/normal_text_size"
                    android:text="@string/w_text"/>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:background="@color/transparentLightGreen">
                    <ImageView
                        android:id="@+id/wMeditationImage"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/check_gray_2x"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/thMeditation"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:onClick="changeWeekdayButtonPressed">
                <TextView
                    android:id="@+id/thMeditationText"
                    android:layout_weight=".8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:textColor="@color/transparentLightGreen"
                    android:textSize="@dimen/normal_text_size"
                    android:text="@string/t_text"/>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:background="@color/transparentLightGreen">
                    <ImageView
                        android:id="@+id/thMeditationImage"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/check_gray_2x"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fMeditation"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:onClick="changeWeekdayButtonPressed">
                <TextView
                    android:id="@+id/fMeditationText"
                    android:layout_weight=".8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:textColor="@color/transparentLightGreen"
                    android:textSize="@dimen/normal_text_size"
                    android:text="@string/f_text"/>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:background="@color/transparentLightGreen">
                    <ImageView
                        android:id="@+id/fMeditationImage"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/check_gray_2x"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sMeditation"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:onClick="changeWeekdayButtonPressed">
                <TextView
                    android:id="@+id/sMeditationText"
                    android:layout_weight=".8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:textColor="@color/transparentLightGreen"
                    android:textSize="@dimen/normal_text_size"
                    android:text="@string/s_text"/>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:background="@color/transparentLightGreen">
                    <ImageView
                        android:id="@+id/sMeditationImage"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/check_gray_2x"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    <RelativeLayout
        android:id="@+id/audioPlayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/weekdaysLayout"
        android:layout_marginTop="50dp"
        android:layout_above="@+id/meditationText"
        android:background="@color/orange">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text_size"
            android:text="Meditation"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"/>
        <Button
            android:id="@+id/pauseButton"
            android:onClick="pauseButtonPressed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/audio_button_shape"
            android:text="Pause"
            android:layout_toLeftOf="@+id/audioCenter"
            android:layout_alignParentBottom="true" />
        <TextView
            android:id="@+id/audioCenter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/playButton"
            android:onClick="playButtonPressed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/audio_button_shape"
            android:text="Play"
            android:layout_toRightOf="@+id/audioCenter"
            android:layout_alignParentBottom="true" />
        <SeekBar
            android:id="@+id/volumeBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="25dp"
            android:progress="30"
            android:layout_above="@+id/pauseButton"/>
        <TextView
            android:id="@+id/currentTime"
            android:layout_above="@+id/volumeBar"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Start"/>
        <TextView
            android:id="@+id/totalTime"
            android:layout_above="@+id/volumeBar"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="End" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/meditationText"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_above="@+id/weeklyLessonButton"
        android:layout_marginBottom="50dp">

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/weeklyLessonButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:onClick="lessonButtonPressed"
        style="@android:style/Widget.Button"
        android:background="@drawable/lessons_button_selector">
        <ImageView
            android:id="@+id/weeklyLessonButtonImage"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/check_green_2x"/>
        <TextView
            android:id="@+id/weeklyLessonButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bpWhite"
            android:textSize="@dimen/normal_text_size"
            android:text=""
            android:layout_toRightOf="@+id/weeklyLessonButtonImage"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
    </RelativeLayout>

</RelativeLayout>
